.container { padding: 20rpx;background-color: #fff}
.topic-owner { display: flex; align-items: center; margin-bottom: 20rpx;}
.owner-avatar { width: 128rpx; height: 128rpx; margin-right: 30rpx; border-radius: 100%;}
.topic-created { margin-left: 30rpx; text-align: justify; color: #cccccc;}
.topic-title {
    text-align: center;
    color: #1c2438;
    font-size: 34rpx;
}
.topic-info { font-size: 24rpx; margin-bottom: 20rpx 0; color:#80848f;display: flex;justify-content:space-between}
.topic-desc-rich { font-size: 30rpx; margin-bottom: 20rpx; word-wrap: break-word; word-break: normal; text-align: justify;   color:#555;}
.replies { margin-top: 30rpx; border-top: 1px solid #ddd;}
.replies-item { padding: 40rpx 0; border-bottom: 1px solid #eee;}
.reply-owner { display: flex; align-items: center; margin-bottom: 20rpx;}
.reply-avatar { width: 100rpx; height: 100rpx; border-radius: 100%; margin-right: 30rpx;}
.reply-name, .reply-time, .reply-content { text-align: justify;   color: #999;}
.reply-time { margin-left: 30rpx; color: #ccc;}
.reply-content { padding: 0 20rpx;  word-wrap: break-word; word-break: normal; color: #999;}
.contract_tel { color: #007fff; font-size: 40rpx;}
.topic-desc image { width: 100%; height: 400rpx; vertical-align: middle; text-align: center;}


.rich img{
    max-width: 100%;
    height: auto;
}